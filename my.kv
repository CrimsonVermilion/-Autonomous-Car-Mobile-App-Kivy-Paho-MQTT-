WindowManager:
    MainWindow:
    SecondWindow:
    ThirdWindow:
    FourthWindow:
    FifthWindow:
    SixthWindow:
    SeventhWindow:
    EighthWindow:
    NinthWindow:
    InfoWindow:
    WrongdisWindow:


<MainWindow>:
    name: "main"
    Image:
        source: "images/rm251-mind-08-f.jpg"
        fit_mode: "fill"
        

    BoxLayout:
        id: login_layout
        orientation: 'vertical'
        padding: [10,50,10,120]
        spacing: 50
        allow_stretch: True
        size_hint_x: 1

        Label:
            text: 'Welcome'
            font_size: sp(50)

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Username'
                font_size: dp(30)
                #halign: 'left'
                #text_size: root.width-20, 20

            TextInput:
                id: user_input
                multiline:False
                hint_text: 'Type your user'
                font_size: sp(28)
                size_hint_x: 1
                size_hint_y: 0.4
                halign: 'center'

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Password'
                #halign: 'left'
                font_size: sp(30)
                #text_size: root.width-20, 20
                

            TextInput:
                id: passw
                multiline:False
                hint_text: 'Type your password'
                password:True
                font_size: sp(28)
                size_hint_x: 1
                size_hint_y: 0.4
                halign: 'center'


        BoxLayout:
            orientation: 'horizontal'
            padding: [100,0,100,0]
            size_hint_x: 1
            size_hint_y: 0.4
            alignment: 'center'

            Button:
                text: 'Login'
                font_size: dp(28)
                background_color: 0.235, 0.478, 0.537, 1
                size_hint_x: 0.5
                size_hint_y: 0.5
                on_release:
                    app.root.current = "info" #if passw.text == "Gdn" else "main" if user_text.text == "Gamd" else "main"

<InfoWindow>
    name: "info"
    per1: per1
    per2: per2
    Image:
        source: "images/rm251-mind-08-f.jpg"
        fit_mode: "fill"
    BoxLayout:
        orientation: 'vertical'
        padding: [10,0,10,200]
        spacing: 50
        allow_stretch: True
        size_hint_x: 1
        Label:
            text: 'Robots Info'
            font_size: dp(40)
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: 'Robot 1'
                    font_size: dp(20)
                    
                Label:
                    text: 'Robot 2'
                    font_size: dp(20)
        BoxLayout:
            orientation: 'horizontal'
            Image:
                source: "images/—Pngtree—vector full battery icon_3773575.png"
            Label:
                id: per1
                text: '60 %'
                font_size: dp(20)
            Image:
                source: "images/—Pngtree—vector full battery icon_3773575.png"
                    
            Label:
                id: per2
                text: '90 %'
                font_size: dp(20)
        BoxLayout:
            orientation: 'horizontal'
            padding: [100,0,100,0]
            size_hint_x: 1
            size_hint_y: 0.4
            alignment: 'center'

            Button:
                text: 'Request Robot'
                font_size: dp(28)
                background_color: 0.235, 0.478, 0.537, 1
                size_hint_x: 0.5
                size_hint_y: 0.5
                #on_press: root.btn()
                on_release:
                    app.root.current = "second"
        
                
        

                

<SecondWindow>:
    name: "second"
    dist1: dist1
    dist2: dist2
    Image:
        source: "images/rm251-mind-08-f.jpg"
        fit_mode: "fill"
        

    BoxLayout:
        id: room_layout
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 50
        allow_stretch: True
        size_hint_x: 1

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Please, Write first destination'
                font_size: dp(25)
                halign: 'center'
                #text_size: root.width-20, 20

            TextInput:
                id: dist1
                multiline:False
                hint_text: 'Type room number'
                font_size: sp(28)
                size_hint_x: 1
                size_hint_y: 0.4
                halign: 'center'

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Please, Write second destination'
                halign: 'center'
                font_size: sp(20)
                #text_size: root.width-20, 20
                

            TextInput:
                id: dist2
                multiline:False
                hint_text: 'Type room number'
                font_size: sp(28)
                size_hint_x: 1
                size_hint_y: 0.4
                halign: 'center'
        
        BoxLayout:
            orientation: 'horizontal'
            padding: [100,0,100,0]
            size_hint_x: 1
            size_hint_y: 0.4
            alignment: 'center'

            Button:
                text: 'Request Robot'
                font_size: dp(28)
                background_color: 0.235, 0.478, 0.537, 1
                size_hint_x: 0.5
                size_hint_y: 0.5
                on_press: root.btn()
                on_release:
                    #app.root.current = "fourth"

<WrongdisWindow>
    name: "wrong"
    Image:
        source: "images/rm251-mind-08-f.jpg"
        fit_mode: "fill"
    BoxLayout:
        id: login_layout
        orientation: 'vertical'
        padding: [10,50,10,200]
        spacing: 50
        allow_stretch: True
        size_hint_x: 1

        Label:
            text: 'There is no rooms with this numbers'
            font_size: dp(22)
        Label:
            text: 'Please enter rooms between 1 to 10'
            font_size: dp(22)
        BoxLayout:
            orientation: 'horizontal'
            padding: [100,0,100,0]
            size_hint_x: 1
            size_hint_y: 0.4
            alignment: 'center'
            Button:
                text: 'Try again'
                font_size: dp(28)
                background_color: 0.235, 0.478, 0.537, 1
                size_hint_x: 0.5
                size_hint_y: 0.5
                #on_press: root.btn()
                on_release:
                    app.root.current = "second"



<ThirdWindow>
    name: "third"
    GridLayout:
        cols:1
        size: root.width, root.height
        Button:
            text: "Intensive Care Unit"
            on_release:
                app.root.current = "fourth"

        Button:
            text: "Medical-Surgical"
            on_release:
                app.root.current = "fourth"

        Button:
            text: "Pharmacy"
            on_release:
                app.root.current = "fourth"


<FourthWindow>
    name: "fourth"
    on_enter: root.start_timer()
    BoxLayout:
        orientation: 'vertical'
        halign: 'center'
        padding: [10, 10, 10, 10]
        
        BoxLayout:
            size_hint_y: 1  
            halign: 'center'
        BoxLayout:
            size_hint_y: None
            size_hint_x: None
            height: dp(200)  
            halign: 'center'
            BoxLayout:
                halign: 'center'
                size_hint: (None, None)
                size: dp(150), dp(150)  
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}  
                Image:
                    source: "images/pngegg.png"
                    allow_stretch: True
                    keep_ratio: True
                    halign: 'center'
        Label:
            text: 'Searching for optimal ROUTE'
            font_size: dp(25)
            size_hint_y: None  
            height: dp(50)
        BoxLayout:
            halign: 'center'
            size_hint_y: 1  



<FifthWindow>
    name: "fifth"
    Image:
        source: "images/rm251-mind-08-f.jpg"
        fit_mode: "fill"
    BoxLayout:
        padding: [10,200,10,200]
        orientation: 'vertical'
        Label:
            text: 'The Robot Arrived'
            font_size: dp(30)
        BoxLayout:
            orientation: 'horizontal'
            padding: [100,0,100,100]
            size_hint_x: 1
            size_hint_y: 0.4
            alignment: 'center'
            Button:
                text: 'Open Samples Container'
                font_size: dp(22)
                background_color: 0.235, 0.478, 0.537, 1
                size_hint_x:
                size_hint_y: 0.4
                on_release:
                    app.root.current = "sixth"
    

<SixthWindow>
    name: "sixth"
    Image:
        source: "images/rm251-mind-08-f.jpg"
        fit_mode: "fill"
    BoxLayout:
        padding: [10,200,10,200]
        orientation: 'vertical'
        Label:
            text: 'Waiting for you to put the samples'
            font_size: dp(22)
        BoxLayout:
            Button:
                text: 'Close the container'
                font_size: dp(22)
                background_color: 0.235, 0.478, 0.537, 1
                size_hint_x:
                size_hint_y: 0.6
                on_release:
                    app.root.current = "seventh"

<SeventhWindow>
    name: "seventh"
    Image:
        source: "images/rm251-mind-08-f.jpg"
        fit_mode: "fill"
    BoxLayout:
        padding: [10, 200, 10, 200]
        orientation: 'vertical'
        Label:
            text: 'Ready to go to the next destination?'
            font_size: dp(22)
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: 'Yes'
                font_size: dp(22)
                background_color: 0.235, 0.478, 0.537, 1
                size_hint_y: 0.6
                on_release:
                    app.root.current = "eighth"
            Button:
                text: 'No'
                font_size: dp(22)
                background_color: 0.235, 0.478, 0.537, 1
                size_hint_y: 0.6
                on_release:
                    app.root.current = "third"

<EighthWindow>
    name: "eighth"
    on_enter: root.start_timer()
    BoxLayout:
        orientation: 'vertical'
        padding: [10, 10, 10, 10]
        BoxLayout:
            size_hint_y: 1  
        BoxLayout:
            size_hint_y: None
            size_hint_x: None
            height: dp(200)  
            BoxLayout:
                size_hint: (None, None)
                size: dp(150), dp(150)  
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}  
                Image:
                    source: "images/pngegg.png"
                    allow_stretch: True
                    keep_ratio: True
        Label:
            text: 'Delivering samples to the destination'
            font_size: dp(22)
            size_hint_y: None  
            height: dp(50)
        BoxLayout:
            size_hint_y: 1  

<NinthWindow>
    name: "ninth"
    Image:
        source: "images/rm251-mind-08-f.jpg"
        fit_mode: "fill"
    BoxLayout:
        padding: [10, 200, 10, 200]
        orientation: 'vertical'
        Label:
            text: 'The Robot arrived successfully'
            font_size: dp(22)
        BoxLayout:
            Button:
                text: 'Return to main menu'
                font_size: dp(22)
                background_color: 0.235, 0.478, 0.537, 1
                size_hint_x:
                size_hint_y: 0.6
                on_release:
                    app.root.current = "second"




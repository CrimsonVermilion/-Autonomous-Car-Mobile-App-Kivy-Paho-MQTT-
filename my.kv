                    Rectangle:
                        pos: self.pos
                        size: self.size
        



<SecondWindow>:
    name: "second"

    GridLayout:
        cols:1
        size: root.width, root.height
        Button:
            text: "Request Robot"
            on_release:
                app.root.current = "third"




<ThirdWindow>
    name: "third"
    GridLayout:
        cols:1
        size: root.width, root.height
        Button:
            text: "Intensive Care Unit"
            on_release:
                app.root.current = "fourth"

        Button:
            text: "Medical-Surgical"
            on_release:
                app.root.current = "fourth"

        Button:
            text: "Pharmacy"
            on_release:
                app.root.current = "fourth"


<FourthWindow>
    name: "fourth"
    BoxLayout:
        orientation: 'vertical'
        size_hint: (1, 1)
        canvas:
            Color:
                rgba: 0, 0, 1, 1
            Ellipse:
                id: dot1
                size: (20, 20)
                pos: self.parent.center_x - 100, self.parent.center_y
            Ellipse:
                id: dot2
                size: (20, 20)
                pos: self.parent.center_x - 50, self.parent.center_y
            Ellipse:
                id: dot3
                size: (20, 20)
                pos: self.parent.center_x, self.parent.center_y
            Ellipse:
                id: dot4
                size: (20, 20)
                pos: self.parent.center_x + 50, self.parent.center_y
            Ellipse:
                id: dot5
                size: (20, 20)
                pos: self.parent.center_x + 100, self.parent.center_y
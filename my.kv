<Button>:
    font_size: 30
    background_color: 0.235, 0.478, 0.537, 1

<TextInput>
    background_color: 0.180, 0.278, 0.337, 1

<Label>
    font_size: 30

WindowManager:
    MainWindow:
    SecondWindow:
    ThirdWindow:
    FourthWindow:


<MainWindow>:
    name: "main"

    GridLayout:
        cols:1
        size: root.width, root.height

        GridLayout:
            rows:4
            cols:4
            size: root.width, root.height
            Label:
                canvas.before:
                    Color:
                        rgb: 0.086, 0.149, 0.180
                    Rectangle:
                        pos: self.pos
                        size: self.size
            Label:
                canvas.before:
                    Color:
                        rgb: 0.086, 0.149, 0.180
                    Rectangle:
                        pos: self.pos
                        size: self.size
            Label:
                canvas.before:
                    Color:
                        rgb: 0.086, 0.149, 0.180
                    Rectangle:
                        pos: self.pos
                        size: self.size
            
            Label:
                canvas.before:
                    Color:
                        rgb: 0.086, 0.149, 0.180
                    Rectangle:
                        pos: self.pos
                        size: self.size
            Label:
                canvas.before:
                    Color:
                        rgb: 0.086, 0.149, 0.180
                    Rectangle:
                        pos: self.pos
                        size: self.size

            Label:
                text: "Username: "
                halign: 'left'
                valign: 'middle'
                canvas.before:
                    Color:
                        rgb: 0.086, 0.149, 0.180
                    Rectangle:
                        pos: self.pos
                        size: self.size



            TextInput:
                id: namee
                multiline: False

            Label:

<Button>:
    font_size: 30
    background_color: 0.235, 0.478, 0.537, 1

<TextInput>
    background_color: 0.180, 0.278, 0.337, 1

<Label>
    font_size: 30

WindowManager:
    MainWindow:
    SecondWindow:
    ThirdWindow:
    FourthWindow:


<MainWindow>:
    name: "main"
    Image:
        source: "images/rm251-mind-08-f.jpg"

    BoxLayout
        id: login_layout
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 50

        Label:
            text: 'Welcome'
            font_size: 32

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Username'
                font_size: 20
                halign: 'left'
                text_size: root.width-20, 20

            TextInput:
                id: login
                multiline:False
                font_size: 28
                size_hint_x: 1
                halign: 'center'

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Password'
                halign: 'left'
                font_size: 18
                text_size: root.width-20, 20
                

            TextInput:
                id: password
                multiline:False
                password:True
                font_size: 28
                size_hint_x: 1
                halign: 'center'
        BoxLayout:
            size_hint_x: 0.5
            size_hint_y: 0.5
            alignment: 'center'

            Button:
                text: 'Login'
                font_size: 24
                alignment: 'center'
                on_press: root.do_login(login.text, password.text)



<SecondWindow>:
    name: "second"

    GridLayout:
        cols:1
        size: root.width, root.height
        Button:
            text: "Request Robot"
            on_release:
                app.root.current = "third"




<ThirdWindow>
    name: "third"
    GridLayout:
        cols:1
        size: root.width, root.height
        Button:
            text: "Intensive Care Unit"
            on_release:
                app.root.current = "fourth"

        Button:
            text: "Medical-Surgical"
            on_release:
                app.root.current = "fourth"

        Button:
            text: "Pharmacy"
            on_release:
                app.root.current = "fourth"


<FourthWindow>
    name: "fourth"
    BoxLayout:
        orientation: 'vertical'
        size_hint: (1, 1)
        canvas:
            Color:
                rgba: 0, 0, 1, 1
            Ellipse:
                id: dot1
                size: (20, 20)
                pos: self.parent.center_x - 100, self.parent.center_y
            Ellipse:
                id: dot2
                size: (20, 20)
                pos: self.parent.center_x - 50, self.parent.center_y
            Ellipse:
                id: dot3
                size: (20, 20)
                pos: self.parent.center_x, self.parent.center_y
            Ellipse:
                id: dot4
                size: (20, 20)
                pos: self.parent.center_x + 50, self.parent.center_y
            Ellipse:
                id: dot5
                size: (20, 20)
                pos: self.parent.center_x + 100, self.parent.center_y
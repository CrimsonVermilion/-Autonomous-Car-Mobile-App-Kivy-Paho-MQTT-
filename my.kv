<TextInput>
    background_color: 0.180, 0.278, 0.337, 1

<Label>
    font_size: 30

WindowManager:
    MainWindow:
    SecondWindow:
    ThirdWindow:
    FourthWindow:


<MainWindow>:
    name: "main"
    Image:
        source: "images/rm251-mind-08-f.jpg"
        fit_mode: "fill"
        

    BoxLayout
        id: login_layout
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 50

        Label:
            text: 'Welcome'
            font_size: 32

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Username'
                font_size: 20
                halign: 'left'
                text_size: root.width-20, 20

            TextInput:
                id: user_input
                multiline:False
                font_size: 28
                size_hint_x: 1
                halign: 'center'

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Password'
                halign: 'left'
                font_size: 18
                text_size: root.width-20, 20
                

            TextInput:
                id: passw
                multiline:False
                password:True
                font_size: 28
                size_hint_x: 1
                halign: 'center'

        BoxLayout:
            orientation: 'horizontal'
            padding: [0,0,0,0]
            size_hint_x: 1
            size_hint_y: 0.5
            alignment: 'center'

            Button:
                text: 'Login'
                font_size: 24
                background_color: 0.235, 0.478, 0.537, 1
                halign: 'center'
                on_release:
                    app.root.current = "second" #if passw.text == "Gdn" else "main" if user_text.text == "Gamd" else "main"



<SecondWindow>:
    name: "second"
    Image:
        source: "images/rm251-mind-08-f.jpg"
        fit_mode: "fill"
        

    BoxLayout
        id: room_layout
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 50
        allow_stretch: True
        size_hint_x: 1

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Please, Write first destination'
                font_size: 20
                halign: 'center'
                #text_size: root.width-20, 20

            TextInput:
                id: first
                multiline:False
                hint_text: 'Type room number'
                font_size: 28
                size_hint_x: 1
                size_hint_y: 0.5
                halign: 'center'

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Please, Write second destination'
                halign: 'center'
                font_size: 20
                #text_size: root.width-20, 20
                

            TextInput:
                id: other
                multiline:False
                hint_text: 'Type room number'
                font_size: 28
                size_hint_x: 1
                size_hint_y: 0.5
                halign: 'center'
        
        BoxLayout:
            orientation: 'horizontal'
            padding: [100,0,100,0]
            size_hint_x: 1
            size_hint_y: 0.7
            alignment: 'center'

            Button:
                text: 'Request Robot'
                font_size: 22
                background_color: 0.235, 0.478, 0.537, 1
                size_hint_x: 0.5
                size_hint_y: 0.5
                on_release:
                    app.root.current = "fourth"




<ThirdWindow>
    name: "third"
    GridLayout:
        cols:1
        size: root.width, root.height
        Button:
            text: "Intensive Care Unit"
            on_release:
                app.root.current = "fourth"

        Button:
            text: "Medical-Surgical"
            on_release:
                app.root.current = "fourth"

        Button:
            text: "Pharmacy"
            on_release:
                app.root.current = "fourth"


<FourthWindow>
    name: "fourth"
    BoxLayout:
        padding: [10,100,10,100]
        orientation: 'vertical'
        Video:
            id: video
            source: 'images/runnnnnn.mp4'
            options: {'eos': 'loop'}
            on_kv_post: self.state = 'play'
        Label:
            text: 'Searching for optimal ROUTE'


